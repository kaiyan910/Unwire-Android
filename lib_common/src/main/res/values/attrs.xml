<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- support attribute for swipe refresh layout -->
    <declare-styleable name="SwipeRefreshLayout">
        <attr name="refreshing" format="boolean" />
        <attr name="enabled" format="boolean" />
    </declare-styleable>

    <attr name="appBackground" format="color|reference" />
    <attr name="appToolbarClose" format="reference" />
    <attr name="appToolbarBookmark" format="reference" />
    <attr name="appToolbarBookmarkOutline" format="reference" />
    <attr name="appToolbarBack" format="reference" />
    <attr name="appToolbarShare" format="reference" />
    <attr name="appSearchBackground" format="reference" />
    <attr name="appSearchIcon" format="reference" />
    <attr name="appTitle" format="color|reference" />
    <attr name="appHint" format="color|reference" />
    <attr name="appText" format="color|reference" />
    <attr name="appComponentBackground" format="color|reference" />
    <attr name="appInactive" format="color|reference" />

</resources>