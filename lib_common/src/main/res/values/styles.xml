<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="appToolbarClose">@drawable/ic_close</item>
        <item name="appToolbarShare">@drawable/ic_share</item>
        <item name="appSearchBackground">@drawable/bg_search_bar</item>
        <item name="appSearchIcon">@drawable/ic_search</item>
        <item name="appBackground">@android:color/white</item>
        <item name="appComponentBackground">@android:color/white</item>
        <item name="appTitle">@android:color/black</item>
        <item name="appText">@android:color/black</item>
        <item name="appHint">@color/grey</item>
        <item name="appInactive">@color/grey</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/black</item>

        <item name="appToolbarClose">@drawable/ic_close_dark</item>
        <item name="appToolbarShare">@drawable/ic_share_dark</item>
        <item name="appSearchBackground">@drawable/bg_search_bar_dark</item>
        <item name="appSearchIcon">@drawable/ic_search_dark</item>
        <item name="appBackground">@android:color/black</item>
        <item name="appComponentBackground">@android:color/black</item>
        <item name="appTitle">@android:color/white</item>
        <item name="appText">@color/grey</item>
        <item name="appHint">@color/grey_light</item>
        <item name="appInactive">@android:color/white</item>
    </style>

    <style name="AppTheme.Splashing" parent="AppTheme.LightStatus">
        <item name="android:windowBackground">@drawable/bg_splashing</item>
    </style>

    <style name="AppTheme.LightStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.LightStatus.Dark" parent="AppTheme.Dark">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
